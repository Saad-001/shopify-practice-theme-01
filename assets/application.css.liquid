:root {
    --main-font : 'Rubik', 'Helvetica Neue', Arial, Helvetica, sans-serif;
    --white: #ffffff;
    --black: #000000;
    --color-text: #555555;
    --color-label: #707070;
    --color-accent : #ff3700;
    --color-border : #dedede;
    --standard-border : 1px solid var(--color-border);
    --black-border : 1px solid var(--black);
    --cart-bg-color : #bbbbbb;

    --line-global: 20px;
    --gutter-global: calc(var(--line-global) * 2);
    --body-font-size: 15px;
    --label-font-size: 12px;
}

/* Base */
.reset-styles{
    appearance: none;
    -webkit-appearance: none;
    -moz-appearance: none;
    -ms-appearance: none;
    cursor: pointer;
    background: transparent;
    border: none;
    border-radius: 0;
    width: auto;
    margin: 0;
    padding: 0;
    line-height: normal;
    -webkit-font-smoothing: inherit;
    -moz-osx-font-smoothing: inherit;
    text-align: left;
}

*{
    box-sizing: border-box;
    font-family: var(--main-font);
}

html, body{
    width: 100%;
    margin: 0;
    padding: 0;
    color: var(--black);
    line-height: var(--line-global);
}

body{
    font-size: var(--body-font-size);
    background-color: var(--white);
}

h1, h2, h3, h4, h5, h6, p, ul, ol {
    margin: 0;
    padding: 0;
    font-weight: 400;
}

/* style guide */

h2{
    font-size: calc(var(--body-font-size) * 2);
    line-height: calc(var(--line-global) * 2);
}

h3{
    font-size: var(--body-font-size);
    line-height: var(--line-global);
}

a{
    text-decoration: none;
}

.description-content{
    margin-top: var(--line-global);
}

.product-title{

}

.list-with-stroke{
    list-style: none;
}

.list-with-stroke li {
    padding: var(--line-global) 0;
    border-top: var(--standard-border);
}

.list-with-stroke li:last-child {
    border-bottom: var(--standard-border);
}

p, ol, ul{
    line-height: var(--line-global);
    font-size: var(--body-font-size);
    color: var(--color-text);
}

label {
    font-size: var(--label-font-size);
    color: var(--color-label);
}

.styled-select{
  position : relative;
}

.custom-select{
    width: 100%;
    line-height: var(--line-global);
    padding: var(--line-global);
    font-size: var(--body-font-size);
    border: var(--black-border);
}

.custom-select:focus {
  outline: none;
}

.styled-select .select-arrow {
  position : absolute;
  top: 1px;
  right: 1px;
  bottom: 1px;
  width : calc(var(--line-global) * 3);
  line-height : calc(var(--line-global) * 2.5);
  background : var(--white);
  border-left: var(--black-border);
  pointer-events : none;
  text-align : center;
}

.styled-select .select-arrow img {
  width : 16px;
  height : 16px;
  display : inline-block;
  vertical-align : middle;
}

.custom-button{
    width: 100%;
    line-height: var(--line-global);
    padding: var(--line-global);
    font-size: var(--body-font-size);
    border: var(--standard-border);
}

.add-to-cart-btn{
    background: var(--color-accent);
    color: var(--white);
}

.add-to-cart-btn .product-price{
    float: right;
}

.form-wrapper{
    margin-top: calc(var(--line-global) * 2);
}

#AddToCartForm{
    margin-top: -(var(--line-global));
}

#product-info-content{
    grid-row-gap: calc(var(--gutter-global) / 2);
}

/* global styles */

.headline-big{
    font-size: 22vw;
    line-height: 1;
}

.cart-item-count{
    color: var(--white);
    text-align: center;
    border-radius: 100%;
}

.link-to-cart, .link-to-home{
    position: fixed;
    top: 0;
    right: 0;
    padding: var(--gutter-global);
    color: var(--color-text);
}

.link-to-home{
    color: var(--black);
    z-index: 10;
}

.link-to-cart .cart-item-count{
    display: block;
    font-size: 0px;
    width: 10px;
    height: 10px;
    background: var(--color-border);
}

.link-to-cart .cart-text{
    display: none;
    position: absolute;
    right: calc(100% - var(--gutter-global)/2);
    white-space: nowrap;
}

.link-to-cart:hover .cart-text{
    display: block;
}

.link-to-cart.cart-filled .cart-text{
    top: var(--gutter-global);
}

.link-to-cart.cart-filled .cart-item-count{
    width: 20px;
    height: 20px;
    background: var(--color-accent);
    font-size: var(--label-font-size);
    line-height: var(--line-global);
}

/* utility classes */
.grid {
    display: grid;
    row-gap: var(--gutter-global);
    column-gap: var(--gutter-global);
}

.two-columns {
    grid-template-columns: repeat(2, 1fr);
}

.main-content{
    min-height: 100vh;
    padding: var(--gutter-global);
    width: calc(50% + (var(--gutter-global)/2));
    margin-left: auto;
    grid-template-rows: minmax(max-content, auto) minmax(min-content, max-content);
}

.valign-center{
    display: flex;
    flex-direction: column;
    justify-content: center;
}

.valign-bottom{
    display: flex;
    flex-direction: column;
    justify-content: flex-end;
}

.sticky-side-image{
    position: fixed;
    left: 0;
    top: var(--gutter-global);
    bottom: var(--gutter-global);
    width: calc(50% - (var(--gutter-global)/2));
}

.sticky-side-image img{
    width: 100%;
    height: 100%;
    object-fit: cover;
}

.single-product-image{
    width: 100%;
    height: 100%;
}

.headline{
    padding-bottom: calc(var(--line-global) * 2);
}

#page-index{
    
}

#product-info{
    
}

/* cart page styles */
#cart {
    background : var(--cart-bg-color);
    color: var(--white);
}

#cart.cart-filled #cart-content{
    padding-bottom: calc(var(--line-global)*8);
    grid-template-rows: auto calc(var(--line-global)*2);
}

#cart.cart-filled{
    background: var(--color-accent);
}

#cart a{
    color: inherit;
}

#cart-title{
    position: relative;

}

#cart:not(.cart-filled) #cart-title{
    -webkit-text-fill-color: transparent;
    -webkit-text-stroke-color: var(--white);
    -webkit-text-stroke-width: 2px;
    -moz-text-fill-color: transparent;
    -moz-text-stroke-color: var(--white);
    -moz-text-stroke-width: 2px;
}

#cart .cart-item-count{
    display: block;
    font-size: 0.08em;
    width: 2em;
    height: 2em;
    position: absolute;
    top: 1.5em;
    right: 0;
    border: 2px solid var(--white);
    background: transparent;
    line-height: 2em;
}

#cart.cart-filled .cart-item-count{
    border: none;
    background: var(--black);
}


#cart-empty-lines,
#back-to-fitra{
    grid-column: 2;
}

.empty-line{
    border-top: 1px solid var(--white);
    height: calc(var(--line-global)*3);
}

.empty-line:first-child{
    margin-top: var(--line-global);
}

.empty-line:last-child{
    border-bottom: 1px solid var(--white);
}

#back-to-fitra{
    margin-top: var(--line-global);
    margin-bottom: var(--line-global);
}

table{
    table-layout: fixed;
    border-collapse: collapse;
    border-spacing: 0;
    width: 100%;
}

th{
    text-align: left;
    font-weight: 400;
    padding-bottom: var(--line-global);
}

tbody tr{
    border-top: 1px solid var(--white);
}

td{
    padding: var(--line-global) 0;
    position: relative;
}

td:last-child{
    text-align: right;
    vertical-align: top;
}

#cart-totals{
    border-bottom: 1px solid var(--white);
}

.remove-line{
    position: absolute;
    top: 0;
    left: 100%;
    display: block;
    padding: var(--line-global) calc(var(--line-global)/2);
    text-align: center;
    width: var(--gutter-global);
}

.remove-text{
    position: absolute;
    top: 0;
    right: 100%;
    display: none;
    padding: var(--line-global) 0 var(--line-global) var(--line-global);
    background-color: var(--color-accent);
    color: var(--black);
}

.remove-line:hover .remove-text{
    display: block;
}

#cart-form-wrap{
    grid-row: span 2;
    position: relative;
}

#cart-support p{
    color: inherit;
}

.checkout-button{
  text-align: left;
  background: var(--black);
  color: var(--white);
  border: none;
  position: absolute;
  width: 100%;
  bottom: calc(var(--line-global)* -8);
  left: 0;
  cursor: pointer;
}

/* 404 page styles */

#content-404 a{
    color: var(--black);
}

/* Responsive Fitra Styles */

.grid > * {
  min-width: 0;
  min-height: 0;
}

@media only screen and (max-width:1023px) {

  :root{
    --add-to-cart-form-height: 143px;
  }

  .sticky-side-image {
    position: static;
    width: 100%;
    height: 90vw;
  }

  .main-content {
    min-height: 0;
    padding: var(--line-global);
    width: 100%;
    margin: 0 auto;
    grid-template-rows: auto; 
  }

  .grid {
    grid-row-gap: var(--line-global);
  }

  .headline {
    padding-bottom: 0;
  }

  .headline-big {
    font-size: 40vw;
  }

  .two-columns {
    grid-template-columns: 1fr;
  }

  .form-wrapper {
    height: calc( var(--add-to-cart-form-height) - var(--line-global));
  }

  #add-to-cart-form {
    position: fixed;
    padding: 0 var(--line-global);
    background: var(--white);
    height: var(--add-to-cart-form-height);
    bottom: var(--line-global);
    left: 0;
    margin: 0;
    width: 100%;
  }

  #cart-lines td:last-child {
    right: var(--line-global);
  }

  #cart.cart-filled #cart-content {
    padding-bottom: 0;
  }

  .checkout-button {
    position: static;
    margin-top: var(--line-global);
  }
}