{% assign mainProduct = all_products["fitra-activity-band"] %}

<div id="404-page">
    <div class="sticky-side-image">
        <div class="single-product-image">
            <img src="{{ mainProduct.images.first | image_url : height: 1440 }}" width="" height="" alt="{{ image.alt | escape }}">
        </div>
    </div>
    <div id="content-404" class="main-content grid">
        <div class="valign-center">
            <p>
                {{ 'general.404.title' | t }}
                <br>
                <a href="/">{{ 'general.404.back' | t }}</a>
            </p>
        </div>
    </div>
</div>